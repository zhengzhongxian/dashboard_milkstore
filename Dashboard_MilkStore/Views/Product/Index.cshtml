@model Dashboard_MilkStore.Models.Product.ProductResponse
@{
    ViewData["Title"] = "Quản lý Sản phẩm Sữa";
}

<div class="container-fluid px-4">
    <!-- Header with gradient background -->
    <div class="d-flex justify-content-between align-items-center mb-3 p-3 rounded-3 shadow-sm header-custom"
         style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);">
        <div class="d-flex align-items-center">
            <i class="bi bi-cup-hot fs-4 text-white me-2 header-icon"></i>
            <div>
                <h5 class="mb-0 text-white fw-semibold">Kho Sữa</h5>
                <p class="text-white-50 mb-0 small"><i class="bi bi-info-circle me-1"></i>Quản lý sản phẩm và tồn kho</p>
            </div>
        </div>
        <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-light rounded-pill shadow-sm px-3 add-button fireworks-btn">
            <i class="bi bi-plus-circle me-1 text-primary"></i>
            <span class="text-primary small fw-medium">Thêm Sản phẩm</span>
        </a>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4 rounded-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Product Table -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="card-body p-0">
            <div class="search-container mb-3 p-3 border-bottom">
                <div class="dataTables_filter">
                    <input type="search" class="form-control form-control-sm rounded-pill" placeholder="Tìm kiếm sản phẩm..." aria-controls="productsTable">
                </div>
            </div>
            <div class="table-container">
                <table id="productsTable" class="table table-hover align-middle mb-0">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th class="px-4" style="width: 120px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-upc-scan me-2"></i>
                                    <span>Mã SP</span>
                                </div>
                            </th>
                            <th style="width: 150px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-image me-2"></i>
                                    <span>Hình ảnh</span>
                                </div>
                            </th>
                            <th style="width: 250px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-box-seam me-2"></i>
                                    <span>Tên Sản phẩm</span>
                                </div>
                            </th>
                            <th style="width: 150px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-tags me-2"></i>
                                    <span>Thương hiệu</span>
                                </div>
                            </th>
                            <th class="d-none d-lg-table-cell" style="width: 200px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-card-text me-2"></i>
                                    <span>Mô tả</span>
                                </div>
                            </th>
                            <th style="width: 150px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-currency-dollar me-2"></i>
                                    <span>Giá gốc</span>
                                </div>
                            </th>
                            <th style="width: 150px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-tag me-2"></i>
                                    <span>Giá khuyến mãi</span>
                                </div>
                            </th>
                            <th style="width: 120px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-percent me-2"></i>
                                    <span>Giảm giá</span>
                                </div>
                            </th>
                            <th style="width: 120px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-boxes me-2"></i>
                                    <span>Tồn kho</span>
                                </div>
                            </th>
                            <th style="width: 120px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-power me-2"></i>
                                    <span>Trạng thái</span>
                                </div>
                            </th>
                            <th class="pe-4" style="width: 150px;">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-gear me-2"></i>
                                    <span>Thao tác</span>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Items != null)
                        {
                            @foreach (var product in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@product.ProductId</td>
                                    <td>
                                        <div class="product-image-container">
                                            @if (product.ImageDTOs != null && product.ImageDTOs.Any())
                                            {
                                                var firstImage = product.ImageDTOs.Where(i => i.Order == "1").FirstOrDefault();
                                                if (firstImage != null && !string.IsNullOrEmpty(firstImage.ImageData))
                                                {
                                                    <img src="@firstImage.ImageData"
                                                         alt="@product.ProductName"
                                                         class="product-image" />
                                                }
                                                else
                                                {
                                                    <div class="no-image">
                                                        <i class="bi bi-image text-muted"></i>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="no-image">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-medium">@product.ProductName</div>
                                                <small class="text-muted d-block d-lg-none text-truncate" style="max-width: 150px;">
                                                    <i class="bi bi-card-text me-1"></i>@product.Description
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill bg-light text-dark">
                                            <i class="bi bi-tag-fill me-1 text-warning"></i>@product.Brand
                                        </span>
                                    </td>
                                    <td class="d-none d-lg-table-cell text-muted text-truncate" style="max-width: 200px;">
                                        @product.Description
                                    </td>
                                    <td class="text-end fw-bold" style="color: #64748b;">
                                        @(product.PriceDefault?.ToString("N0"))đ
                                    </td>
                                    <td class="text-end fw-bold" style="color: #00a86b;">
                                        @if (product.PriceActive.HasValue)
                                        {
                                            @(product.PriceActive.Value.ToString("N0"))
                                            <span>đ</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (product.PriceActive.HasValue && product.PriceDefault.HasValue)
                                        {
                                            var discountPercent = ((product.PriceDefault.Value - product.PriceActive.Value) / product.PriceDefault.Value * 100);
                                            if (discountPercent > 0)
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger">
                                                    <i class="bi bi-arrow-down me-1"></i>@(discountPercent.ToString("N1"))%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill @GetStockBadgeClass(product.StockQuantity)">
                                            <i class="bi @GetStockIcon(product.StockQuantity) me-1"></i>
                                            @product.StockQuantity
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill @(product.StatusName == "Active" ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")">
                                            <i class="bi @(product.StatusName == "Active" ? "bi-check-circle" : "bi-x-circle") me-1"></i>
                                            @product.StatusName
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-sm btn-outline-primary rounded-pill fireworks-btn" title="Sửa">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-sm btn-outline-danger rounded-pill fireworks-btn" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-info rounded-pill btn-quick-view fireworks-btn"
                                                    title="Xem nhanh"
                                                    data-product-id="@product.ProductId">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4 text-muted">
                                    <i class="bi bi-database-exclamation me-2"></i>Không tìm thấy sản phẩm
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model?.Metadata != null)
            {
                <div class="d-flex justify-content-between align-items-center p-3 border-top">
                    <div class="text-muted">
                        <i class="bi bi-list-check me-1"></i>
                        Hiển thị @((Model.Metadata.PageNumber - 1) * Model.Metadata.PageSize + 1) đến
                        @Math.Min(Model.Metadata.PageNumber * Model.Metadata.PageSize, Model.Metadata.TotalCount) trong
                        @Model.Metadata.TotalCount sản phẩm
                    </div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.Metadata.HasPrevious ? "" : "disabled")">
                                <a class="page-link border-0" href="@Url.Action("Index", new { pageNumber = Model.Metadata.PageNumber - 1, pageSize = Model.Metadata.PageSize })">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.Metadata.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Metadata.PageNumber ? "active" : "")">
                                    <a class="page-link border-0" href="@Url.Action("Index", new { pageNumber = i, pageSize = Model.Metadata.PageSize })">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.Metadata.HasNext ? "" : "disabled")">
                                <a class="page-link border-0" href="@Url.Action("Index", new { pageNumber = Model.Metadata.PageNumber + 1, pageSize = Model.Metadata.PageSize })">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStockBadgeClass(int stock)
    {
        if (stock > 20) return "bg-success bg-opacity-10 text-success";
        if (stock > 10) return "bg-info bg-opacity-10 text-info";
        if (stock > 0) return "bg-warning bg-opacity-10 text-warning";
        return "bg-danger bg-opacity-10 text-danger";
    }

    public string GetStockIcon(int stock)
    {
        if (stock > 20) return "bi-check-circle-fill";
        if (stock > 10) return "bi-exclamation-circle-fill";
        if (stock > 0) return "bi-exclamation-triangle-fill";
        return "bi-x-circle-fill";
    }
}

@section Styles {
    <style>
        /* Header custom styles */
        .header-custom {
            transition: all 0.3s ease;
            border-left: 7px solid #4338ca;
            border-top-left-radius: 15px !important;
            border-bottom-left-radius: 15px !important;
        }

        .header-custom:hover {
            box-shadow: 0 .25rem .75rem rgba(0,0,0,.15)!important;
        }

        .header-icon {
            font-size: 1.2rem;
            background: rgba(255, 255, 255, 0.15);
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }

        .add-button {
            transition: all 0.2s ease;
        }

        .add-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 .25rem .5rem rgba(0,0,0,.1)!important;
        }

        /* Search container styles */
        .search-container {
            background: white;
            padding: 1rem;
        }

        .search-container .form-control {
            max-width: 300px;
            margin-left: auto;
            padding: 0.5rem 1rem;
            border: 1px solid #e2e8f0;
            background-color: #f8fafc;
        }

