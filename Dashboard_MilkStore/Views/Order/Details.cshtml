@model Dashboard_MilkStore.Models.Order.OrderViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/order-detail.css" />
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng - @Model.OrderNumber</h3>
            <div class="card-tools">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Thông tin đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tr>
                                    <th style="width: 30%">Mã đơn hàng</th>
                                    <td>@Model.OrderId</td>
                                </tr>
                                <tr>
                                    <th>Số đơn hàng</th>
                                    <td>@Model.OrderNumber</td>
                                </tr>
                                <tr>
                                    <th>Ngày đặt</th>
                                    <td>@(Model.OrderDate?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái</th>
                                    <td>
                                        @{
                                            string badgeClass = "badge-secondary";
                                            string statusText = Model.StatusName ?? "Chưa xác định";

                                            switch (Model.StatusId)
                                            {
                                                case "PENDING":
                                                    badgeClass = "badge-info";
                                                    break;
                                                case "CONFIRMED":
                                                    badgeClass = "badge-primary";
                                                    break;
                                                case "PROCESSING":
                                                    badgeClass = "badge-warning";
                                                    break;
                                                case "SHIPPING":
                                                    badgeClass = "badge-warning";
                                                    break;
                                                case "COMPLETED":
                                                    badgeClass = "badge-success";
                                                    break;
                                                case "CANCELLED":
                                                    badgeClass = "badge-danger";
                                                    break;
                                            }
                                        }
                                        <span class="badge @badgeClass">@statusText</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Mã khách hàng</th>
                                    <td>@(Model.CustomerId ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Tổng tiền</th>
                                    <td>@(Model.TotalPrice?.ToString("N0") ?? "-") đ</td>
                                </tr>
                                <tr>
                                    <th>Phương thức thanh toán</th>
                                    <td>@(Model.PaymentMethod ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Ngày tạo</th>
                                    <td>@(Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Thông tin giao hàng</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <tr>
                                    <th style="width: 30%">Địa chỉ giao hàng</th>
                                    <td>@(Model.ShippingAddress ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Phí giao hàng</th>
                                    <td>@(Model.ShippingFee?.ToString("N0") ?? "-") đ</td>
                                </tr>
                                <tr>
                                    <th>Mã vận đơn</th>
                                    <td>@(Model.ShippingCode ?? "-")</td>
                                </tr>
                                <tr>
                                    <th>Ghi chú</th>
                                    <td>@(Model.Notes ?? "-")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title">Chi tiết đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                                {
                                    foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>@item.ProductId</td>
                                            <td>@(item.ProductName ?? "-")</td>
                                            <td>@(item.ProductPrice?.ToString("N0") ?? "-") đ</td>
                                            <td>@item.Quantity</td>
                                            <td>@(item.SubTotal?.ToString("N0") ?? "-") đ</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Không có sản phẩm nào</td>
                                    </tr>
                                }
                            </tbody>
                            @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                            {
                                <tfoot>
                                    <tr>
                                        <th colspan="4" class="text-right">Tổng tiền sản phẩm:</th>
                                        <td>@(Model.OrderDetails.Sum(x => x.SubTotal)?.ToString("N0") ?? "-") đ</td>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="text-right">Phí giao hàng:</th>
                                        <td>@(Model.ShippingFee?.ToString("N0") ?? "-") đ</td>
                                    </tr>
                                    <tr>
                                        <th colspan="4" class="text-right">Tổng cộng:</th>
                                        <td><strong>@(Model.TotalPrice?.ToString("N0") ?? "-") đ</strong></td>
                                    </tr>
                                </tfoot>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    