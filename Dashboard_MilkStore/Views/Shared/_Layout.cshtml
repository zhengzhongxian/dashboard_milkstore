    <script>
        // Toggle sidebar on mobile and expand when collapsed
        document.getElementById('sidebarToggle').addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();

            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            // Check if sidebar is collapsed
            if (sidebar.classList.contains('collapsed')) {
                // If collapsed, expand it
                sidebar.classList.remove('collapsed');

                // Save sidebar state to localStorage
                localStorage.setItem('sidebarCollapsed', 'false');

                // Update buttons state
                updateButtonsState(false);

                // Adjust main content
                mainContent.style.marginLeft = '280px';
                mainContent.style.maxWidth = 'calc(100% - 280px)';

                console.log('Sidebar expanded via toggle button');
            } else {
                // On mobile, toggle active class
                sidebar.classList.toggle('active');
                mainContent.classList.toggle('active');
                console.log('Sidebar toggled on mobile');
            }
        });

        // Function to update toggle button visibility and collapse button icon
        function updateButtonsState(isCollapsed) {
            const toggleButton = document.getElementById('sidebarToggle');
            const collapseIcon = document.getElementById('sidebarCollapseIcon');
            const collapseBtn = document.getElementById('sidebarCollapseBtn');

            if (isCollapsed) {
                // Show toggle button on large screens
                toggleButton.classList.remove('d-lg-none');
                toggleButton.classList.add('d-lg-flex');

                // Change collapse button icon to right arrow
                collapseIcon.classList.remove('bi-chevron-left');
                collapseIcon.classList.add('bi-chevron-right');

                // Hide collapse button
                collapseBtn.classList.add('d-none');
            } else {
                // Hide toggle button on large screens
                toggleButton.classList.remove('d-lg-flex');
                toggleButton.classList.add('d-lg-none');

                // Change collapse button icon to left arrow
                collapseIcon.classList.remove('bi-chevron-right');
                collapseIcon.classList.add('bi-chevron-left');

                // Show collapse button
                collapseBtn.classList.remove('d-none');
            }
        }

        // Collapse/expand sidebar
        document.getElementById('sidebarCollapseBtn').addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();

            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            // Toggle collapsed class
            sidebar.classList.toggle('collapsed');

            // Save sidebar state to localStorage
            const isCollapsed = sidebar.classList.contains('collapsed');
            localStorage.setItem('sidebarCollapsed', isCollapsed);

            // Update buttons state
            updateButtonsState(isCollapsed);

            // Log for debugging
            console.log('Sidebar collapse button clicked. Collapsed:', isCollapsed);

            // Force a reflow to ensure transitions work properly
            void sidebar.offsetWidth;

            // Adjust main content
            if (isCollapsed) {
                mainContent.style.marginLeft = '0';
                mainContent.style.maxWidth = '100%';
            } else {
                mainContent.style.marginLeft = '280px';
                mainContent.style.maxWidth = 'calc(100% - 280px)';
            }
        });

        // Check if sidebar was collapsed previously
        document.addEventListener('DOMContentLoaded', function() {
            const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');

            console.log('DOMContentLoaded - Sidebar collapsed state:', isCollapsed);

            if (isCollapsed) {
                sidebar.classList.add('collapsed');

                // Adjust main content
                mainContent.style.marginLeft = '0';
                mainContent.style.maxWidth = '100%';

                // Update buttons
                updateButtonsState(true);
            } else {
                sidebar.classList.remove('collapsed');

                // Adjust main content
                mainContent.style.marginLeft = '280px';
                mainContent.style.maxWidth = 'calc(100% - 280px)';

                // Update buttons
                updateButtonsState(false);
            }

            // Add a small delay to ensure transitions work properly after page load
            setTimeout(function() {
                sidebar.style.transition = 'all 0.3s ease';
                mainContent.style.transition = 'all 0.3s ease';
            }, 100);
        });


    </script>

