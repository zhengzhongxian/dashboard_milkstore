<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MilkStore Dashboard</title>

    <!-- Modern fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons and Font Awesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dashboard_MilkStore.styles.css" asp-append-version="true" />

    <style>
        :root {
            /* Modern color palette based on the image */
            --primary-color: #3f51b5; /* Indigo - matches the image */
            --primary-light: #757de8;
            --secondary-color: #303f9f;
            --accent-color: #ff4081; /* Pink */
            --success-color: #4caf50; /* Green */
            --warning-color: #ff9800; /* Orange */
            --danger-color: #f44336; /* Red */
            --info-color: #2196f3; /* Blue */

            /* Background and text colors */
            --light-bg: #f5f5f5;
            --dark-bg: #212121;
            --dark-text: #263238;
            --light-text: #78909c;

            /* UI elements */
            --border-radius: 12px;
            --input-radius: 8px;
            --card-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05), 0 8px 10px -6px rgba(0, 0, 0, 0.03);
            --hover-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --transition-speed: 0.3s;
        }

        html, body {
            font-family: 'Poppins', sans-serif;
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            overflow-y: auto; /* Cho phép cuộn dọc */
        }

        body {
            background: linear-gradient(135deg, #f5f7ff 0%, #eef2ff 100%);
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%236366f1' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
            z-index: -1;
        }

        .login-container {
            width: 100%;
            max-width: 900px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1.5rem;
            position: relative;
            overflow-y: auto; /* Cho phép cuộn khi cần thiết */
        }

        .login-card {
            width: 100%;
            max-width: 1100px;
            display: flex;
            flex-direction: row;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            overflow: hidden;
            transition: all var(--transition-speed);
            position: relative;
            z-index: 1;
        }

        .login-card:hover {
            box-shadow: var(--hover-shadow);
        }

        .login-header {
            flex: 1;
            padding: 3rem;
            background: url('https://res.cloudinary.com/dvxnesld4/image/upload/v1746343266/c0749168-049d-4a49-9d80-0f045faf0690_al1zq1.png');
            background-size: cover;
            background-position: center;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            text-align: center;
            min-height: 600px;
        }

        .login-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.2); /* Slight dark overlay for better text readability */
            z-index: 0;
        }

        .login-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            right: 0;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 60%);
            z-index: 0;
        }

        .login-illustration {
            display: none; /* Hide the old illustration */
        }

        .logo-container {
            display: flex;
            align-items: center;
            position: absolute;
            bottom: 20px;
            z-index: 1;
            background-color: rgba(255, 255, 255, 0.15);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            backdrop-filter: blur(5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            display: inline-flex;
        }

        .logo-container i {
            font-size: 1.75rem;
            margin-right: 0.75rem;
            color: white;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
            animation: float 3s ease-in-out infinite;
        }

        @@keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-6px); }
            100% { transform: translateY(0px); }
        }

        .logo-container h2 {
            font-weight: 700;
            margin: 0;
            font-size: 1.5rem;
            letter-spacing: 1px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
            color: white;
        }

        .login-header h4 {
            margin: 0;
            font-weight: 600;
            font-size: 1.75rem;
            opacity: 0.6;
            position: relative;
            z-index: 1;
            text-shadow: 0 2px 10px rgba(0,0,0,0.2);
            text-transform: uppercase;
            letter-spacing: 1px;
            top: -240px;
        }

        .login-header p {
            margin: 0;
            font-size: 1.1rem;
            line-height: 1.6;
            opacity: 0.95;
            position: relative;
            z-index: 1;
            text-shadow: 0 2px 8px rgba(0,0,0,0.3);
            max-width: 80%;
            background-color: rgba(0, 0, 0, 0.25);
            padding: 1rem;
            border-radius: 10px;
            backdrop-filter: blur(3px);
            border-left: 3px solid rgba(255, 255, 255, 0.3);
        }

        .milk-bottle {
            display: none; /* Hide the milk bottle */
        }

        .logo-container-mobile {
            display: none;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            background-color: rgba(63, 81, 181, 0.1);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .logo-container-mobile i {
            font-size: 2rem;
            margin-right: 0.75rem;
            color: var(--primary-color);
            animation: float 3s ease-in-out infinite;
        }

        .logo-container-mobile h2 {
            font-weight: 700;
            margin: 0;
            font-size: 1.75rem;
            letter-spacing: 1px;
            color: var(--primary-color);
        }

        .login-body {
            padding: 4rem;
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: #ffffff;
            max-width: 451px;
        }

        .login-body h3 {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 1.5rem;
            position: relative;
            display: inline-block;
        }

        .login-body h3::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 155px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-color), var(--accent-color));
            border-radius: 2px;
        }

        .form-group {
            position: relative;
            min-height: 90px; /* Chiều cao cố định cho form-group */
            margin-bottom: 1.5rem;
            overflow: visible; /* Cho phép nội dung vượt quá */
        }

        /* Form-group đặc biệt cho checkbox và nút đăng nhập */
        .form-group.mb-4:nth-of-type(3), .form-group.mb-3 {
            height: auto;
            min-height: auto;
        }

        .form-group label {
            font-weight: 500;
            color: var(--dark-text);
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .input-group {
            border-radius: var(--input-radius);
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.02);
            transition: all var(--transition-speed);
            border: 1px solid rgba(0,0,0,0.08);
            margin-bottom: 0.5rem;
            width: 100%;
        }

        .input-group:focus-within {
            box-shadow: 0 4px 10px rgba(63, 81, 181, 0.15);
            border-color: rgba(63, 81, 181, 0.4);
        }

        .input-group-text {
            background-color: white;
            border: none;
            color: var(--primary-color);
            font-size: 1.1rem;
            padding-left: 1rem;
            min-width: 45px;
            display: flex;
            justify-content: center;
        }

        .form-control {
            border: none;
            padding: 0.85rem 1rem;
            font-size: 1rem;
            background-color: white;
            font-family: 'Poppins', sans-serif;
            flex: 1;
            width: 100%;
        }

        .form-control:focus {
            box-shadow: none;
        }

        .form-control::placeholder {
            color: #c0c4cc;
            font-weight: 300;
        }

        .toggle-password {
            border: none;
            background-color: white;
            color: var(--primary-color);
            transition: all var(--transition-speed);
            padding-right: 1rem;
        }

        .toggle-password:hover {
            color: var(--secondary-color);
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border: none;
            padding: 1rem 1.5rem;
            border-radius: var(--input-radius);
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all var(--transition-speed);
            box-shadow: 0 4px 15px rgba(63, 81, 181, 0.25);
            position: relative;
            overflow: hidden;
            font-size: 1rem;
            text-transform: uppercase;
            margin-top: 0.5rem;
            margin-bottom: 1rem;
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.2) 50%, rgba(255,255,255,0) 100%);
            transition: all 0.8s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--secondary-color) 0%, var(--primary-color) 100%);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(63, 81, 181, 0.35);
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:active {
            transform: translateY(-1px);
        }

        a {
            color: var(--primary-color);
            transition: all var(--transition-speed);
            text-decoration: none;
        }

        a:hover {
            color: var(--secondary-color);
            text-decoration: none;
        }

        .text-danger {
            color: var(--danger-color) !important;
            font-size: 0.85rem;
            margin-top: 0.25rem;
            margin-bottom: 0.75rem;
            display: block;
            font-weight: 500;
            max-height: 1.5em; /* Giới hạn chiều cao chỉ hiển thị 1 dòng */
            overflow: hidden; /* Ẩn nội dung vượt quá */
            text-overflow: ellipsis; /* Hiển thị dấu ... */
            white-space: nowrap; /* Không ngắt dòng */
            max-width: 100%;
            position: relative;
            cursor: help;
        }

        /* Hiển thị tooltip tùy chỉnh */
        .tooltip {
            font-family: 'Poppins', sans-serif;
            opacity: 1 !important;
        }

        .tooltip .tooltip-inner {
            background-color: rgba(229, 57, 53, 0.95);
            padding: 0.75rem 1rem;
            max-width: 300px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            border-radius: 6px;
            text-align: left;
            font-size: 0.85rem;
            line-height: 1.5;
        }

        .tooltip .tooltip-arrow::before {
            border-bottom-color: rgba(229, 57, 53, 0.95);
        }

        .text-danger:hover::after {
            opacity: 1;
        }

        .validation-summary {
            background-color: rgba(229, 57, 53, 0.05);
            border-radius: var(--input-radius);
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border-left: 3px solid var(--danger-color);
            box-shadow: 0 4px 15px rgba(229, 57, 53, 0.08);
        }

        .validation-summary ul {
            margin-bottom: 0;
            padding-left: 1.25rem;
        }

        .validation-summary-errors {
            color: var(--danger-color);
            font-weight: 500;
        }

        .validation-summary-valid {
            display: none;
        }

        .alert-danger {
            background-color: rgba(229, 57, 53, 0.08);
            color: var(--danger-color);
            border: none;
            border-radius: var(--input-radius);
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            position: relative;
            font-weight: 500;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            box-shadow: 0 4px 15px rgba(229, 57, 53, 0.1);
            border-left: 3px solid var(--danger-color);
        }

        .alert-danger i {
            color: var(--danger-color);
            font-size: 1.1rem;
            margin-right: 0.75rem;
        }

        /* Decorative elements */
        .decorative-shape {
            position: absolute;
            z-index: 0;
            opacity: 0.5;
        }

        .shape-1 {
            top: 10%;
            left: 5%;
            width: 300px;
            height: 300px;
            background: radial-gradient(circle, rgba(67, 97, 238, 0.1) 0%, rgba(67, 97, 238, 0) 70%);
            border-radius: 50%;
            animation: pulse 8s infinite alternate;
        }

        .shape-2 {
            bottom: 10%;
            right: 5%;
            width: 250px;
            height: 250px;
            background: radial-gradient(circle, rgba(0, 180, 216, 0.1) 0%, rgba(0, 180, 216, 0) 70%);
            border-radius: 50%;
            animation: pulse 6s infinite alternate-reverse;
        }

        @@keyframes pulse {
            0% { transform: scale(1); }
            100% { transform: scale(1.2); }
        }

        /* Responsive adjustments */
        @@media (max-width: 1200px) {
            .login-card {
                max-width: 950px;
            }

            .login-body {
                padding: 3rem;
            }
        }

        @@media (max-width: 992px) {
            .login-container {
                display: flex;
                justify-content: center;
                align-items: flex-start; /* Căn đầu trang thay vì giữa */
                min-height: 100vh;
                padding: 2rem 1.5rem;
                padding-top: 3rem; /* Thêm padding-top */
            }

            .login-card {
                flex-direction: column;
                max-width: 450px;
                margin: 0 auto;
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
                animation: fadeInUp 0.5s ease-out;
            }

            @@keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .login-header {
                display: none; /* Ẩn hoàn toàn phần header */
            }

            .login-body {
                padding: 2.5rem;
                border-radius: var(--border-radius);
                width: 100%;
            }

            .logo-container-mobile {
                display: flex;
                margin-bottom: 2rem;
                justify-content: center;
                background-color: rgba(63, 81, 181, 0.1);
                padding: 0.75rem 1.5rem;
                border-radius: 50px;
                box-shadow: 0 8px 20px rgba(63, 81, 181, 0.15);
                animation: fadeIn 0.8s ease-out;
            }

            @@keyframes fadeIn {
                from { opacity: 0; }
                to { opacity: 1; }
            }

            .login-body h3::after {
                width: 120px;
            }

            .form-group {
                height: 85px; /* Chiều cao cố định cho form-group trên màn hình trung bình */
            }
        }

        @@media (max-width: 576px) {
            .login-container {
                padding: 1rem;
                padding-top: 2rem;
                align-items: flex-start;
                height: auto;
                min-height: 100%;
            }

            .login-card {
                max-width: 100%;
                margin: 0;
            }

            .login-body {
                padding: 1.5rem;
                border-radius: var(--border-radius);
                width: 100%;
            }

            .logo-container-mobile {
                padding: 0.5rem 1rem;
                margin-bottom: 1.5rem;
            }

            .logo-container-mobile i {
                font-size: 1.75rem;
            }

            .logo-container-mobile h2 {
                font-size: 1.5rem;
            }

            .shape-1, .shape-2 {
                display: none;
            }

            .login-body h3 {
                font-size: 1.5rem;
            }

            .login-body h3::after {
                width: 100px;
            }

            .form-group {
                height: 80px; /* Chiều cao cố định cho form-group trên màn hình nhỏ */
                margin-bottom: 0.75rem;
            }

            body {
                height: auto;
                min-height: 100vh;
                padding-bottom: 1rem;
            }

            .btn-primary {
                padding: 0.85rem 1.25rem;
                margin-top: 0.25rem;
                margin-bottom: 0.75rem;
            }
        }
    </style>
</head>
<body>
    <div class="decorative-shape shape-1"></div>
    <div class="decorative-shape shape-2"></div>

    <main role="main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
